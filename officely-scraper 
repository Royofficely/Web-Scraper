#!/bin/bash

# Get the project directory (assuming officely-scraper is run from the project directory)
PROJECT_DIR="$(pwd)"

# Set the path to agentim.py
AGENTIM_PY="$PROJECT_DIR/agentim.py"

install_scraper() {
    echo "Installing Officely Web Scraper..."
    python3 "$AGENTIM_PY" install
    echo "Installation complete. You can now run the scraper using 'officely-scraper web scraper run'."
}

run_scraper() {
    python3 "$AGENTIM_PY" run
}

case "$1 $2 $3" in
    "web scraper install")
        install_scraper
        ;;
    "web scraper run")
        run_scraper
        ;;
    *)
        echo "Usage: officely-scraper web scraper [install|run]"
        exit 1
        ;;
esac